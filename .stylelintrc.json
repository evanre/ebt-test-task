{
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ],
    "rules": {
        "indentation": 4,
        "max-nesting-depth": 5,
        "order/properties-alphabetical-order": true,
        "order/order": [
            "declarations",
            "custom-properties"
        ],
        "selector-no-qualifying-type": [
            true,
            {
                "ignore": ["attribute", "class"]
            }
        ],
        "selector-class-pattern": "^((_|-){0,2}[a-z]+)*",
        "at-rule-blacklist": null
    }
}
